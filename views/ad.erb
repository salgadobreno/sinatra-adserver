//display the adverisement

var advert = ''

advert+='<a href="http://<%= env["HTTP_HOST"] %>/click/<%= @ad.id %>">';
  advert+='<img class="ad" alt="<%= @ad.title %>" src="/ads/<%= @ad.filename %>" border="0" height="<%= @ad.height %>" width="<%= @ad.width %>" />';
  advert+='</a>';
<% unless @ad.content.nil? %>
  advert+='<p class="ads">';
  advert+='<%= @ad.content.gsub(/"/, '\"').gsub(/\//, '\/').gsub(/\n/, '\n') %>';
  advert+='</p>';
<% end %>
advert+=''/

document.write(advert);
